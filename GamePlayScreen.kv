<GamePlayScreen@Screen>:
    id: mainpage
    name: 'screen2'
    Label: 
        text: '[b]Collection[/b]'
        font_size: 30
        markup: True
        y: 450
    Label:
        size_hint: .1, .1
        text: root.score_display
        pos: root.width*3.5/5.5, root.height/6.
        halign: 'center'
    Label:
        size_hint: .1, .1
        text: "Number of sets " + str(root.numberofsets)
        pos: root.width*1.5/5.5, root.height/6.
        halign: 'center'
    Button:
        size_hint: (None, None)
        pos: root.width-200, 0
        size: 200,50
        text: 'Back to Mainpage'
        on_press:                                
            root.goBackToIntro()

    GridLayout:
        id: cards_layout
        cols: 3
        size_hint: 0.5, 0.5
        spacing: '10dp'
        pos: root.width/4, root.height/4