<SelectPlayersPopup>:
    size_hint: .8, .8
    # background: 'data/popup.png'
    # separate_color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
    separator_height: 0
    title: ''

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1
        spacing: '10dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.4
            AnchorLayout:
                size_hint: .5, 1
                anchor_x: 'left'
                anchor_y: 'top'
                Button:
                    text: root.get_players_name(0)
                    on_press: 
                        root.update_scores(0)
                        root.dismiss()
            AnchorLayout:
                size_hint: .5,1
                anchor_x: 'right'
                anchor_y: 'top'
                Button:
                    text: root.get_players_name(1)
                    on_press: 
                        root.update_scores(1)
                        root.dismiss()
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.4
            AnchorLayout:
                size_hint: .5,1
                anchor_x: 'left'
                anchor_y: 'bottom'
                Button:
                    text: root.get_players_name(2)
                    on_press: 
                        root.update_scores(2)
                        root.dismiss()
            AnchorLayout:
                size_hint: .5,1
                anchor_x: 'right'
                anchor_y: 'bottom'
                Button:
                    text: root.get_players_name(3)
                    on_press: 
                        root.update_scores(3)
                        root.dismiss()
<PlayerNamePopup>:
    size_hint: .5, .5
    title: 'Enter Name of Player(s)'
    title_size: '20sp'
    separator_height: 5
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.8
        size_hint_x: 0.5
        spacing: '20dp'