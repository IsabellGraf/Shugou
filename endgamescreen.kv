# All classes related to the end game screen

<Scores@Label>:
    markup: True
    font_size: '30sp'

<EndGameScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: title
            text: 'Game Over'
            font_size: '40sp'
        Scores:
            id: score1
            text: root.nthname(0) + ':      ' + str(root.nthscore(0)) if root.number_of_players>=1 else ''
        Scores:
            id: score2
            text: root.nthname(1) + ':      ' + str(root.nthscore(1)) if root.number_of_players>=2 else ''
        Scores:
            id: score3
            text: root.nthname(2) + ':      ' + str(root.nthscore(2)) if root.number_of_players>=3 else ''
        Scores:
            id: score4
            text: root.nthname(3) + ':      ' + str(root.nthscore(3)) if root.number_of_players>=4 else ''
        Scores:
            id: score5
            text: root.nthname(4) + ':      ' + str(root.nthscore(4)) if root.number_of_players>=5 else ''
        Button:
            text: 'Back to Main Screen'
            on_press: root.game.current = 'intro'
