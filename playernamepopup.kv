<PlayerNamePopup>:
    size_hint: .5, .5
    title: 'Enter Name of the Players'
    title_size: '25sp'
    separator_height: 5
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.8
        size_hint_x: 0.5
        spacing: 10
        GridLayout:
            id: content
            spacing: '20dp'        
            cols: 2
            spacing:'10dp'
        Button:
            text:'Start Game'
            size_hint_y: None
            height: '50dp'
            font_size: '25dp'
            on_press: root.dismiss()

<PlayerNameEdit>:
    title: "Change Name"
    title_size: '20sp'
    size_hint: (0.25, 0.25)
    textBox: textinput
    pos_hint: {'top':0.8}
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: textinput
            focus: True
            text: root.nameText
            multiline: False
        Button:
            text: "Change"
            on_press: root.dismiss()