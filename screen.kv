<MyToggleButton>:
    Label:
        x: root.x
        y: root.y
        markup: True
        font_size: 30

<GameLayout>:
#    mainpage: mainpage
#    FloatLayout:
    ScreenManager:
        id: _screen_manager
        Screen:
            id: fontpage
            name: 'screen1'
            Label: 
                text: 'The first screen'
            Button:
                size_hint: (None, None)
                pos: root.width/2., root.height/2.
                size: 200,200
                text: 'Play Game'
                on_press:  
                    root.play()
                    _screen_manager.current = 'screen2'
        Screen:
            id: mainpage
            name: 'screen2'
            Label:
                text: "score " + str(root.score)
                x: 100
                y: 150
            Label:
                text: str(root.numberofsets) + " sets available"
                x: 100
                y: 180                
            Label: 
                text: 'The Game Play Page.'
            GridLayout:
                cols: 3
                spacing: '10dp'
                padding: [100,200,100,100]
        Screen:
            id: gameoverpage
            name: 'screen3'
            Label: 
                text: 'The GameOver Page.'
            Button:
                text: 'Game Over'
                on_press: _screen_manager.current = 'screen1'
