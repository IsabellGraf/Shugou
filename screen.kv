<MyToggleButton>:
    background_normal: root.normalimage          
    background_down: root.downimage

<PlayerSection@Button>:
    value: 0
    size_hint: (None, None)
    #size: 200,100
    text: str(self.value) + ' Player'
    # How to use different fonts
    # Maybe we'll need to include the font in the game itself?
    #font_name: '/usr/local/texlive/2011/texmf-dist/fonts/truetype/public/gnu-freefont/FreeSans.ttf' 

<GameLayout>:
    ScreenManager:
        id: _screen_manager
        Screen:
            id: fontpage
            name: 'screen1'
            Label: 
			    size_hint: (None, None)
                text: 'The Game Set'
                font_size:40
                font_name: 'DroidSans'
                markup: True
                size: 100,100
				pos: (root.width-100)/2, root.height-100
				
            PlayerSection:
                value: 1
                pos: (root.width-200)/2., 4*root.height/5-100.
                on_press:
                    root.number_of_players = self.value
                    _screen_manager.current = 'screen2'                    

            PlayerSection:
                value: 2
                pos: (root.width-200)/2., 3*root.height/5-100.
                on_press:
                    root.number_of_players = self.value
                    _screen_manager.current = 'screen2'     

            PlayerSection:
                value: 3
                pos: (root.width-200)/2., 2*root.height/5-100.
                on_press:
                    root.number_of_players = self.value
                    _screen_manager.current = 'screen2'     

            PlayerSection:
                value: 4
                pos: (root.width-200)/2., root.height/5-100.
                on_press:
                    root.number_of_players = self.value
                    _screen_manager.current = 'screen2'     
                    
			Button:
                size_hint: (None, None)
                pos: (root.width-200)/8., 4*root.height/5-100.
                size: 200,50
                text: 'Tutorial'
                on_press:  
                    _screen_manager.current = 'screen4'
			
			
        Screen:
            id: mainpage
            name: 'screen2'
            Label: 
                text: '[b]Collection[/b]'
                font_size: 30
                markup: True
                y: 450
            Label:
                text: "score " + str(root.score)
                x: cards_layout.x + 200
                y: cards_layout.top - cards_layout.height - 400   
            Label:
                text: "Number of sets " + str(root.numberofsets)
                x: cards_layout.x - 200
                y: cards_layout.top - cards_layout.height -400                                  
            GridLayout:
                id: cards_layout
                cols: 3
                spacing: '10dp'
                padding: [100,100,100,200]

        Screen:
            id: gameoverpage
            name: 'screen3'
            Label:
			    size_hint: (None, None)
                text: 'Game Over'
				font_size:40
                font_name: 'DroidSans'
				pos: (root.width-100)/2, root.height-100
			Label:
			    size_hint: (None, None)
                text: 'scores will go here'
                font_name: 'DroidSans'
				pos: (root.width-100)/2, root.height-200 
            Button:
                text: 'Back to Main Screen'
				size_hint: (None,None)
				pos: (root.width-200)/2., root.height/5-100.
                size: 200,100
                on_press: _screen_manager.current = 'screen1'
		Screen:
            id: tutorial
            name: 'screen4'
            Label: 
			    size_hint: (None, None)
                text: 'How To Play Set'
                font_size:40
                font_name: 'DroidSans'
                markup: True
                size: 100,100
				pos: (root.width-100)/2, root.height-100
			Label: 
			    size_hint: (None, None)
                text: 'Instructions here'
                font_name: 'DroidSans'
                markup: True
                size: 100,100
				pos: (root.width-100)/2, root.height-200
            Button:
                text: 'Back to Main Screen'
				size_hint: (None,None)
				pos: (root.width-200)/2., root.height/5-100.
                size: 200,100
                on_press: _screen_manager.current = 'screen1'
