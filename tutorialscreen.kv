                            size_hint: .9, 1
                            on_press: tutorialScreens.current = root.goBackToIntro()
                    AnchorLayout:
                        size_hint:(.3,1)
                        Button:
                            anchor_x: 'right'
                            anchor_y: 'top'
                            text: 'Next: Examples of Sets'
                            size_hint: .9, 1
