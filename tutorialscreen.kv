# All classes related to the tutorial game screen
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<TextLabel@Label>
    pos_hint: {'center_x': 0.5}
    size_hint: (0.9, 1)
    font_name: 'DroidSans'
    markup: True
    halign: 'left'
    valign: 'middle'
    text_size: self.size
    font_size: '18sp'

<BoxLayoutcol@BoxLayout>
    orientation: 'vertical'
    padding: '2dp'
    spacing: '5dp' 
    size_hint: (1, 1)

<TutorialExample>
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: 210
    TextLabel:
        text: root.text
        size_hint_y: None
        markup: True
        color: 0, 0, 0, 1
    BoxLayout:
        orientation: 'horizontal'
        width: root.width
        padding: '2pt'
        Image:
            size_hint_x: 1
            source: root.image1
            size_hint_y: None
            height: 120
        Image:
            size_hint_x: 1
            source: root.image2
            size_hint_y: None
            height: 120
        Image:
            size_hint_x: 1
            source: root.image3
            size_hint_y: None
            height: 120

<NavButton@Button>:
    size_hint: .9, 1
    font_size: '20sp'
    anchor_y: 'top'
    anchor_x: 'center'

<TutorialScreen>
    title: 'How To Play Shugou'
    title_size: '20sp'
    ScreenManager:
        id: tutorialScreens
        Screen:
            id: tutorial
            name: 'tutorial1'
            canvas:
                Color:
                    rgba: 0.95, 0.95, 0.95, 0.8
                Rectangle:
                    pos: root.pos
                    size: root.size

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    size_hint_x: 1
                    size_hint_y: None
                    height: 525

                    TextLabel:
                        text: u"Welcome to [b]Shugou[/b]!\n\nShugou is the Japanese word for sets or collections of elements. Your goal is to find special collections of 3 cards among the 12 cards on the board, and to do so as quickly as possible. Those collections is what we call a [b]shugou[/b].\nPlay continues until there are no more [b]shugous[/b] to be found on the board.\n\nA [b]shogou[/b] is a collection of 3 cards, in which all four properties, [i]color, filling, quantity and shape[/i] are all the same or all different."
                        color: 0, 0, 0, 1
                        markup: True
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,.1)
                spacing: 5
                AnchorLayout:
                    size_hint:(.3,1)
                    NavButton:
                        text: 'Done'
                        on_press: root.dismiss()
                AnchorLayout:
                    size_hint:(.3,1)
                    NavButton:
                        text: 'Next: Examples'
                        on_press: tutorialScreens.transition = SlideTransition(direction = 'left'); tutorialScreens.current = 'tutorial2'


        Screen:
            name: 'tutorial2'
            on_enter: root.title = "Examples of Shugous"
            canvas:
                Color:
                    rgba: 0.95, 0.95, 0.95, 0.8
                Rectangle:
                    pos: root.pos
                    size: root.size

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    cols: 1
                    size_hint_x: 1
                    size_hint_y: None
                    height: 1100
                    TutorialExample:
                        text: "Colors, quantities, shapes equal; fillings different."
                        image1: 'images/2321.png'
                        image2: 'images/2331.png'
                        image3: 'images/2311.png'

                    TutorialExample:
                        text: "Colors, fillings equal; quantities, shapes different."
                        image1: 'images/1221.png'
                        image2: 'images/2222.png'
                        image3: 'images/3223.png'

                    TutorialExample:
                        text: "Colors equal; fillings, quantities, shapes different."
                        image1: 'images/1321.png'
                        image2: 'images/2333.png'
                        image3: 'images/3312.png'

                    TutorialExample:
                        text: "All properties are different."
                        image1: 'images/1313.png'
                        image2: 'images/2231.png'
                        image3: 'images/3122.png'

                    TutorialExample:
                        text: "[b]NOT A SHUGOU:[/b] Fillings equal; colors, quantities different; [b]shapes neither equal nor different.[/b]"
                        image1: 'images/1112.png'
                        image2: 'images/2311.png'
                        image3: 'images/3211.png'


            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,.1)
                spacing: 5
                AnchorLayout:
                    size_hint:(.3,1)
                    NavButton:
                        text: 'Back'
                        on_press: tutorialScreens.transition = SlideTransition(direction = 'right'); tutorialScreens.current = 'tutorial1'; root.title = 'How To Play Shugou'
                AnchorLayout:
                    size_hint:(.3,1)
                    NavButton:
                        text: 'Done'
                        on_press: root.dismiss()

 