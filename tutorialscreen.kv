# All classes related to the tutorial game screen
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<TextLabel@Label>
    pos_hint: {'center_x': 0.5}
    size_hint: (0.9, 1)
    font_name: 'DroidSans'
    markup: True
    halign: 'left'
    valign: 'middle'
    text_size: self.size
    font_size: '25sp'

<BoxLayoutcol@BoxLayout>
    orientation: 'vertical'
    padding: '2dp'
    spacing: '5dp' 
    size_hint: (1, 1)

<BoxLayoutim@BoxLayout>
    size_hint: (0.8, 0.8)
    pos_hint: {'center_x': 0.5}
    orientation: 'horizontal'
    padding: '5dp'
    spacing: '5dp'
    Image:
        size_hint_x: 0.5
        source: root.image1
    Image:
        size_hint_x: 0.5
        source: root.image2
    Image:
        size_hint_x: 0.5
        source: root.image3

<NavButton@Button>:
    size_hint: .9, 1
    font_size: '20dp'
    anchor_y: 'top'
    anchor_x: 'center'

<TutorialScreen@Popup>
    title: 'How To Play Shugou'
    ScreenManager:
        id: tutorialScreens
        Screen:
            id: tutorial
            name: 'tutorial1'
            BoxLayout:
                orientation: 'vertical'
                padding: 10
                TextLabel:
                    text: u"Welcome to Shugou! Shugou is the Japanese word for sets or collection of elements. Your goal is to find special collections of 3 cards among the 12 that will be dealt. Those collections is what we call a shugou. And to do so as quickly as possible. Play continues until there are no more shogou to be found on the board. A shogou is a collection of 3 cards, in which all four properties, quantity, shape, filling and color are all the same or all different."
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1,.1)
                    spacing: 5
                    AnchorLayout:
                        size_hint:(.3,1)
                        NavButton:
                            text: 'Back'
                            on_press: root.dismiss()
                    AnchorLayout:
                        size_hint:(.3,1)
                        NavButton:
                            text: 'Next: Examples'
                            on_press: tutorialScreens.transition = SlideTransition(direction = 'left'); tutorialScreens.current = 'tutorial2'
        Screen:
            name: 'tutorial2'
            on_enter: root.title = "Examples"
            BoxLayout:
                orientation: 'vertical'
                padding: 10
                BoxLayout:
                    orientation: 'horizontal'
                    padding: '5dp'
                    spacing: '5dp'
                    BoxLayoutcol:
                        TextLabel:
                            text: "In this first example the quantity, the color and the shape are equal, the fillings are all different:" 
                        TextLabel:
                            text: "In the second example the color and the filling are equal, the quantities and the shapes are all different:"
                        TextLabel:
                            text: "Next, the color is equal and all other properties are different:" 
                        TextLabel:
                            text: "Last all properties are different:"
                    BoxLayoutcol:                            
                        BoxLayoutim:
                            image1: 'images/1221.png'
                            image2: 'images/3223.png'
                            image3: 'images/2222.png'
                        BoxLayoutim:
                            image1: 'images/2333.png'
                            image2: 'images/1321.png'
                            image3: 'images/3312.png'
                        BoxLayoutim:
                            image1: 'images/2311.png'
                            image2: 'images/2321.png'
                            image3: 'images/2331.png'
                        BoxLayoutim:
                            image1: 'images/3122.png'
                            image2: 'images/1313.png'
                            image3: 'images/2231.png'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1,.1)
                    spacing: 5
                    AnchorLayout:
                        size_hint:(.3,1)
                        NavButton:
                            text: 'Back to instruction page'
                            on_press: tutorialScreens.transition = SlideTransition(direction = 'right'); tutorialScreens.current = 'tutorial1'; root.title = 'How To Play Shugou'
                    AnchorLayout:
                        size_hint:(.3,1)
                        NavButton:
                            text: 'Done'
                            on_press: root.dismiss()
 